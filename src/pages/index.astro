---
import Card from '../components/Card.astro';
import '../styles/global.css';
import { Icon } from 'astro-icon/components';
const allPosts = await Astro.glob('../pages/posts/*.md');

const getFullYear = new Date().getFullYear();

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Marker</title>
  </head>
  <body class="container max-w-[120ch] mx-auto bg-zinc-50/50">
    <header class="mb-6 mt-12 p-6">
      <Icon name="logo" class="w-28 lg:w-32 h-auto" />
      <h1 class="scroll-m-20 m-0 p-0 text-4xl sr-only">Marker</h1>
      <p class="mt-4 text-sm lg:text-base lg:leading-7 tracking-wide">
        Our platform's goal is to help people with epilepsy discover the benefits of keeping a seizure diary. As you explore these pages,
        you'll uncover a personal way to track seizures, identify triggers, and refine your treatment plans. Over time, this activity will
        foster a deeper understanding of your triggers, relationship with epilepsy, and empower you to manage your condition better.
      </p>
    </header>
    <main class="space-y-3 my-6">
      {
        allPosts.map((post) => (
          <Card author={post.frontmatter.author} href={post.url} title={post.frontmatter.title} body={post.frontmatter.description} />
        ))
      }
    </main>
    <footer class="overflow-hidden py-12 px-6">
      <div class="flex flex-col gap-4 lg:flex-row lg:justify-between lg:items-center">
        <div class="w-24 h-auto">
          <Icon name="logo" class="w-24 lg:w-28 h-auto" />
        </div>
        <p class="text-sm leading-none">&copy{`${getFullYear}`} Marker, Inc. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<script>
  // JavaScript code goes here.
</script>

