---
import Card from '../components/Card.astro';
import Appbar from '../components/Appbar.astro';
import Footer from '../components/Footer.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Marker</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <main class="">
      <section class="grid grid-cols-1 lg:grid-cols-2 divide-y lg:divide-x lg:min-h-[90svh]">
        <div class="p-4 lg:p-8">
          <Appbar />
          <p class="mt-4 text-sm lg:text-base lg:leading-7 tracking-wide">
            Our platform's goal is to help people with epilepsy discover the benefits of keeping a seizure diary. As you explore these
            pages, you'll uncover a personal way to track seizures, identify triggers, and refine your treatment plans. Over time, this
            activity will foster a deeper understanding of your triggers, relationship with epilepsy, and empower you to manage your
            condition better.
          </p>
        </div>
        <div class="p-4 lg:p-8 lg:overflow-y-scroll lg:h-[90svh] space-y-8">
          {allPosts.map((post) => <Card href={post.url} title={post.frontmatter.title} body={post.frontmatter.description} />)}
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<script>
  // JavaScript code goes here.
</script>

<style is:global>
  @font-face {
    font-family: 'Golos Text';
    src: url('/fonts/GolosText-VariableFont_wght.ttf') format('truetype');
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }
  * {
    font-family: 'Golos Text', sans-serif;
  }
</style>
