---
import Card from '../components/Card.astro';
import '../styles/global.css';
import { Icon } from 'astro-icon/components';
const allPosts = await Astro.glob('../pages/posts/*.md');
import { ViewTransitions } from 'astro:transitions';

import { fade } from 'astro:transitions';

const getFullYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Marker</title>
    <ViewTransitions transition:animate={fade({ duration: '0.1s' })} />
  </head>
  <body class="container max-w-[120ch] mx-auto bg-zinc-50/50">
    <header class="mb-6 mt-12 p-6">
      <Icon name="logo" class="w-28 lg:w-32 h-auto" />
      <h1 class="scroll-m-20 m-0 p-0 text-4xl sr-only">Marker</h1>
      <p class="mt-4 text-sm lg:text-base lg:leading-7 tracking-wide">
        Our platform wants to help people with epilepsy discover the benefits of keeping a combined seizure diary and
        journal. As you go through these pages, you'll find a personal way to track seizures, spot triggers, and improve
        your treatment plans. Over time, doing this will help you understand your triggers better, your connection with
        epilepsy, and give you some control in this chaotic world.
      </p>
    </header>
    <main class="space-y-3 my-6">
      {
        allPosts.map((post) => (
          <Card
            author={post.frontmatter.author}
            href={post.url}
            title={post.frontmatter.title}
            body={post.frontmatter.description}
            date={post.frontmatter.pubDate.split('T00:00:00.000Z')}
          />
        ))
      }
    </main>
    <footer class="overflow-hidden py-12 px-6">
      <div class="flex flex-col gap-4 lg:flex-row lg:justify-between lg:items-center">
        <div class="w-24 h-auto">
          <Icon name="logo" class="w-24 lg:w-28 h-auto" />
        </div>
        <p class="text-sm leading-none">&copy{`${getFullYear}`} Marker, Inc. All rights reserved.</p>
      </div>
    </footer>
    <script>
      // JavaScript code goes here.
    </script>

    <style></style>
  </body>
</html>
