---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components'
---

<nav class="m-0 p-0" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center m-0 p-0 space-x-2 my-8">
    <li class="list-none m-0 p-0">
      <a href="/" class="text-gray-400 hover:text-gray-500">
        <Icon name="home-fill" />
      </a>
    </li>
    <li class="list-none m-0 p-0">
      <Icon name="chevron-right" />
    </li>
    <li class="list-none m-0 p-0">
      <a href="#" class="text-sm font-medium text-gray-500 hover:text-gray-700">{title}</a>
    </li>
  </ol>
</nav>
